{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Just Music",
  "version": "0.1.0",
  "identifier": "com.justmusic.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Just Music",
        "width": 300,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "com.justmusic.app",
          "windows": ["*"],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:window:allow-hide",
            "core:app:allow-app-hide"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
